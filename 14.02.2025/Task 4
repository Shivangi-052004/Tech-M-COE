//Create an alert to display the address of the user, and get the input from the user for the same


<!DOCTYPE html>

<html>
<body>
<h2>Address Alert</h2>

<button onclick="alertBox()">Enter address!</button>

<script>
    function alertBox() {
        let address = prompt("Enter your address:");
        if (address) {
            alert("You are in " + address);
        } else {
            alert("Please enter the address.");
        }
    }
    </script>
    

</body>
</html>
