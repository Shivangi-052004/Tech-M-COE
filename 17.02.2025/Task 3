//Pass a number, and find if the sum of their digits is an even or odd number

let a = Number(prompt("Enter the num: "));
let num = 0;
    let sum =0;
function add(a)
{
   
    while(a>0)
    {
    num = a%10;
    sum =sum+num;
    a = Math.floor(a / 10) ;
    }
    console.log(`The sum of the digits: ${sum}`);
     
}

add(a);
