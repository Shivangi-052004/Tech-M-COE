//Create a arrow function without parameters, to choose the operation among add, subtract, multiply and divide, using switch statement. On choosing the operation,
it has to invoke the corresponding method (as expression) with parameters and display the results accordingly, like, sum for add, difference for subtract, product for multiply,
quotient and reminder for divide


const operations = () => {
    let num1 = Number(prompt("Enter the num1: "));
    let num2 = Number(prompt("Enter the num2: "));
    let choice = prompt("Enter the operation: sum \n sub \n mulitple \n divide ");
    switch(choice)
    {
        case 'sum':
            {
            var sum =num1+num2 ;
            console.log(`Sum : ${sum}`);
            break;
            }
            
            
        case 'sub':
            {
            var sub =num1-num2 ;
            console.log(`Difference : ${sub}`);
            break;
            }
            
        case 'multiply' :
            {
            var multiply =num1*num2 ;
            console.log(`Product : ${multiply}`);
            break;
            }
            
        case 'divide':
            {
            var divide =num1%num2 ;
            console.log(`Division : ${divide}`);
            break;
            }
        default :
           {
               console.log("Invalid");
           }
            
    }
}
operations();
